<div class="wrapper">
   <div class="title-text">
      <div class="title login">
         View Password
      </div>
      
   </div>
   
   <div class="form-inner">
      <form action="#" class="login">
         <div class="form-group">
            <label for="website">Website</label>
            <input type="text" class="form-control" readonly value={{password.website}}>
         </div>
         
            <div class="form-group">
            <label for="website">URL</label>
            <input type="text" class="form-control" readonly value={{password.url}}>
         </div>

         <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" readonly value={{password.user_name}}>
         </div>

         <div class="form-group">
            <label for="website">Password</label>
            <div class="input-group">
               <input type="password" id="password" class="form-control" aria-label="Password" readonly value="{{password.saved_password}}">
               <div class="input-group-append">
                  <button class="btn btn-outline-secondary" id="btnCopyPwd" style="height: 36.5px" type="button">Copy</button>
               </div>
            </div>
         </div>
         
         <a class="btn btn-primary btn-lg" href="/edit_password/{{password.id}}">Edit Password</a>
         <button class="btn btn-danger btn-lg" id="btnDelete">Delete Password</button>
         <a class="btn btn-secondary btn-lg" href="/">Back</a>

      </form>
   </div>
</div>

<script src="/js/view.js"></script>
<script src="/js/helper.js"></script>
